mixin line(labels, data)
  div.line-graph
    canvas(
        width="600"
        height="400"
        data-chart="line"
        data-scale-line-color="transparent"
        data-scale-grid-line-color="rgba(255,255,255,.05)"
        data-scale-font-color="#a2a2a2"
        data-labels=labels
        data-value=data
      ).ex-line-graph